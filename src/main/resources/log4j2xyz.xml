<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="appName">${bundle:application:spring.application.name:-app}</Property>
    </Properties>

    <!-- RollingFile appender for prod profile -->
    <springProfile name="prod">
        <Appenders>
            <RollingFile name="RollingFile" fileName="logs/${appName}.log" filePattern="logs/${appName}-%d{yyyyMMdd-HHmmss}.log">
                <PatternLayout>
                    <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
                </PatternLayout>
                <Policies>
                    <OnStartupTriggeringPolicy />
                    <TimeBasedTriggeringPolicy interval="86400" modulate="true"/>
                    <SizeBasedTriggeringPolicy size="10MB"/>
                </Policies>
                <DefaultRolloverStrategy>
                    <Delete basePath="logs/" maxDepth="1">
                        <IfFileName glob="*.log" >
                            <IfAccumulatedFileSize exceeds="10 GB" />
                            <IfAccumulatedFileCount exceeds="1000" />
                        </IfFileName>
                        <IfLastCreated age="30d" />
                    </Delete>
                </DefaultRolloverStrategy>
            </RollingFile>
        </Appenders>
    </springProfile>

    <!-- RollingFile appender for staging profile -->
    <springProfile name="staging">
        <Appenders>
            <RollingFile name="RollingFile" fileName="logs/${appName}.log" filePattern="logs/${appName}-%d{yyyyMMdd-HHmmss}.log">
                <PatternLayout>
                    <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
                </PatternLayout>
                <Policies>
                    <OnStartupTriggeringPolicy />
                    <TimeBasedTriggeringPolicy interval="86400" modulate="true"/>
                    <SizeBasedTriggeringPolicy size="10MB"/>
                </Policies>
                <DefaultRolloverStrategy>
                    <Delete basePath="logs/" maxDepth="1">
                        <IfFileName glob="*.log" >
                            <IfAccumulatedFileSize exceeds="10 GB" />
                            <IfAccumulatedFileCount exceeds="1000" />
                        </IfFileName>
                        <IfLastCreated age="30d" />
                    </Delete>
                </DefaultRolloverStrategy>
            </RollingFile>
        </Appenders>
    </springProfile>

    <!-- RollingFile and Console appender for dev profile -->
    <springProfile name="dev">
        <Appenders>
            <RollingFile name="RollingFile" fileName="logs/${appName}.log" filePattern="logs/${appName}-%d{yyyyMMdd-HHmmss}.log">
                <PatternLayout>
                    <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
                </PatternLayout>
                <Policies>
                    <OnStartupTriggeringPolicy />
                    <TimeBasedTriggeringPolicy interval="86400" modulate="true"/>
                    <SizeBasedTriggeringPolicy size="10MB"/>
                </Policies>
                <DefaultRolloverStrategy>
                    <Delete basePath="logs/" maxDepth="1">
                        <IfFileName glob="*.log" >
                            <IfAccumulatedFileSize exceeds="10 GB" />
                            <IfAccumulatedFileCount exceeds="1000" />
                        </IfFileName>
                        <IfLastCreated age="30d" />
                    </Delete>
                </DefaultRolloverStrategy>
            </RollingFile>
            <Console name="Console" target="SYSTEM_OUT">
                <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            </Console>
        </Appenders>
    </springProfile>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="RollingFile"/>
            <springProfile name="dev">
                <AppenderRef ref="Console"/>
            </springProfile>
        </Root>
        <Logger name="com.increff" level="INFO" additivity="false">
            <AppenderRef ref="RollingFile"/>
            <springProfile name="dev">
                <AppenderRef ref="Console"/>
            </springProfile>
        </Logger>k
    </Loggers>
</Configuration>